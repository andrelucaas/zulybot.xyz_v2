<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <%- include('../Partials/head'); %>
</head>
<nav>
    <%- include('../Partials/navbar'); %>
</nav>

<body>
    <br>
    <center>
        <div class="container">
            <div class="columns">
                <div class="column">
                    <section class="hero is-danger welcome is-small">
                        <div class="hero-body">
                            <div class="container">
                                <h1 class="title">
                                    Olá, <%= user.username %>.
                                </h1>
                                <h2 class="subtitle">
                                    Você está gerenciando o servidor <strong><%= guild.name %></strong>!
                                </h2>
                            </div>
                        </div>
                    </section>
                    <section class="info-tiles">
                        <div class="tile is-ancestor has-text-centered">
                            <div class="tile is-parent">
                                <article class="tile is-child box">
                                    <p class="title"><%= guild.memberCount %></p>
                                    <p class="subtitle">Membros</p>
                                </article>
                            </div>
                            <div class="tile is-parent">
                                <article class="tile is-child box">
                                    <p class="title"><%= guild.channels.size %></p>
                                    <p class="subtitle">Canais</p>
                                </article>
                            </div>
                            <div class="tile is-parent">
                                <article class="tile is-child box">
                                    <p class="title"><%= guild.roles.size %></p>
                                    <p class="subtitle">Cargos</p>
                                </article>
                            </div>
                        </div>
                        <div class="tabs">
                            <ul>
                              <li><a href="/dashboard/@me/manage/<%= guild.id %>">Geral</a></li>
                              <li class="is-active"><a href="/dashboard/@me/manage/<%= guild.id %>/mod">Automod</a></li>
                              <li><a href="/dashboard/@me/manage/<%= guild.id %>/premium">Premium</a></li>
                            </ul>
                          </div>
                          <!-- Select which automod functions you want to work with checkbox. -->
                            <br>
                            <div class="field">
                                <label class="label">Automod</label>
                                <div class="control">
                                    <label class="checkbox">
                                        <input type="checkbox" name="automod" value="automod" checked>
                                        Automod Scam
                                    </label>
                                    <br>
                                    <label class="checkbox">
                                        <input type="checkbox" name="automod" value="automod-warn" checked>
                                        Automod Invites
                                    </label>
                                    <br>
                                    <label class="checkbox">
                                        <input type="checkbox" name="automod" value="automod-kick" checked>
                                        Automod NSFW
                                    </label>
                                    <br>
                                    <label class="checkbox">
                                        <input type="checkbox" name="automod" value="automod-ban" checked>
                                        Automod Spam
                                    </label>
                                </div>
                    </section>
                </div>
            </div>
        </div>
    </center>
    <br>
    <footer class="footer">
        <%- include('../Partials/footer'); %>
    </footer>
</body>

</html>